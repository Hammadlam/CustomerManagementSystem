@model CustomerManagementSystemUI.UIModels.AttendanceVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "EmployeeAttendance";
}

<div class="container mt-4">
    <h3 class="mb-3">Employee Attendance</h3>

    <form method="post">
        <!-- Row 1 -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Select Employee</label>
                <select class="form-select" asp-for="FkUserId" required>
                    <option value="">-- Select Employee --</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Time In</label>
                <input type="datetime-local" asp-for="TimeIn" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Break In</label>
                <input type="datetime-local" asp-for="BreakIn" class="form-control" />
            </div>
        </div>

        <!-- Row 2 -->
        <div class="row">
           
            <div class="col-md-4 mb-3">
                <label class="form-label">Break Out</label>
                <input type="datetime-local" asp-for="BreakOut" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Time Out</label>
                <input type="datetime-local" asp-for="TimeOut" class="form-control" />
            </div>

             <div class="col-md-4 mb-3">
                <label class="form-label">Attendance Status</label>
                <input type="checkbox" asp-for="Present" /> Present
                <input type="checkbox" asp-for="Absent" /> Absent
            </div>
        </div>

        <!-- Row 3 -->
        <div class="row">
            <div class="col-md-4 mb-3 form-check">
                <input type="checkbox" asp-for="IsManual" class="form-check-input" />
                <label class="form-check-label">Manual Entry</label>
            </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary">Save Attendance</button>
    </form>

</div>